import 'package:flutter/material.dart';
import 'package:nb_utils/nb_utils.dart';
import 'package:streamit_flutter/main.dart';
import 'package:streamit_flutter/models/SectionsResponse.dart';
import 'package:streamit_flutter/screens/MovieDetailScreen.dart';
import 'package:streamit_flutter/utils/AppWidgets.dart';
import 'package:streamit_flutter/utils/Common.dart';
import 'package:streamit_flutter/utils/resources/Size.dart';
import 'package:super_banners/super_banners.dart';

class MovieGridList extends StatefulWidget {
  final List<SectionData> list;
  final bool isCompactView;

  MovieGridList(this.list, {this.isCompactView = false});

  @override
  State<MovieGridList> createState() => _MovieGridListState();
}

class _MovieGridListState extends State<MovieGridList> {
  @override
  Widget build(BuildContext context) {
    var width = context.width();
    var isTablet = width > 1200;

    if (widget.isCompactView) {
      // Modern grid view optimized for landscape thumbnails
      return GridView.builder(
        gridDelegate: SliverGridDelegateWithFixedCrossAxisCount(
          crossAxisCount: 2,
          childAspectRatio: 1.2, // Landscape aspect ratio
          crossAxisSpacing: 12,
          mainAxisSpacing: 16,
        ),
        physics: NeverScrollableScrollPhysics(),
        shrinkWrap: true,
        itemCount: widget.list.length,
        padding: EdgeInsets.all(16),
        itemBuilder: (context, index) {
          SectionData data = widget.list[index];
          return InkWell(
            splashColor: Colors.transparent,
            highlightColor: Colors.transparent,
            onTap: () async {
              appStore.setTrailerVideoPlayer(true);
              await MovieDetailScreen(movieData: data).launch(context);
            },
            child: Column(
              crossAxisAlignment: CrossAxisAlignment.start,
              children: [
                // Thumbnail container with modern styling
                Expanded(
                  child: Container(
                    decoration: BoxDecoration(
                      borderRadius: BorderRadius.circular(12),
                      boxShadow: [
                        BoxShadow(
                          color: Colors.black.withOpacity(0.4),
                          blurRadius: 12,
                          offset: Offset(0, 4),
                        ),
                      ],
                    ),
                    child: ClipRRect(
                      borderRadius: BorderRadius.circular(12),
                      child: Stack(
                        fit: StackFit.expand,
                        children: [
                          // Thumbnail image
                          commonCacheImageWidget(
                            data.thumbnail.validate(),
                            fit: BoxFit.cover,
                            width: double.infinity,
                          ),

                          // Subtle dark overlay for depth
                          Container(
                            decoration: BoxDecoration(
                              gradient: LinearGradient(
                                begin: Alignment.topCenter,
                                end: Alignment.bottomCenter,
                                colors: [
                                  Colors.transparent,
                                  Colors.black.withOpacity(0.15),
                                ],
                              ),
                            ),
                          ),

                          // Status badge - top right
                          Positioned(
                            top: 6,
                            right: 6,
                            child: _buildStatusBadge(data),
                          ),

                          // Play icon overlay on hover/press
                          Center(
                            child: Container(
                              padding: EdgeInsets.all(12),
                              decoration: BoxDecoration(
                                color: Colors.black.withOpacity(0.6),
                                shape: BoxShape.circle,
                              ),
                              child: Icon(
                                Icons.play_arrow_rounded,
                                color: Colors.white,
                                size: 28,
                              ),
                            ),
                          ),

                          // Interactive overlay
                          Positioned.fill(
                            child: Material(
                              color: Colors.transparent,
                              child: InkWell(
                                onTap: () async {
                                  appStore.setTrailerVideoPlayer(true);
                                  await MovieDetailScreen(
                                    movieData: data,
                                  ).launch(context);
                                },
                                splashColor: Colors.white.withOpacity(0.1),
                                highlightColor: Colors.white.withOpacity(0.05),
                                borderRadius: BorderRadius.circular(12),
                              ),
                            ),
                          ),
                        ],
                      ),
                    ),
                  ),
                ),

                SizedBox(height: 8),

                // Title with modern styling
                Padding(
                  padding: EdgeInsets.symmetric(horizontal: 4),
                  child: Text(
                    parseHtmlString(data.name.validate()),
                    style: TextStyle(
                      color: Colors.white,
                      fontWeight: FontWeight.w600,
                      fontSize: 13,
                      letterSpacing: 0.2,
                      height: 1.3,
                    ),
                    maxLines: 2,
                    overflow: TextOverflow.ellipsis,
                  ),
                ),
              ],
            ),
          );
        },
      );
    } else {
      // Modern list view with enhanced styling
      return ListView.separated(
        physics: NeverScrollableScrollPhysics(),
        shrinkWrap: true,
        padding: EdgeInsets.all(16),
        itemCount: widget.list.length,
        separatorBuilder: (context, index) => SizedBox(height: 16),
        itemBuilder: (context, index) {
          SectionData data = widget.list[index];

          return InkWell(
            splashColor: Colors.transparent,
            highlightColor: Colors.transparent,
            onTap: () async {
              appStore.setTrailerVideoPlayer(true);
              await MovieDetailScreen(movieData: data).launch(context);
            },
            child: Container(
              height: 140,
              decoration: BoxDecoration(
                borderRadius: BorderRadius.circular(12),
                color: Colors.white.withOpacity(0.05),
                boxShadow: [
                  BoxShadow(
                    color: Colors.black.withOpacity(0.3),
                    blurRadius: 10,
                    offset: Offset(0, 4),
                  ),
                ],
              ),
              child: ClipRRect(
                borderRadius: BorderRadius.circular(12),
                child: Row(
                  children: [
                    // Thumbnail section
                    Stack(
                      children: [
                        Container(
                          width: 200,
                          child: commonCacheImageWidget(
                            data.thumbnail.validate(),
                            fit: BoxFit.cover,
                            height: double.infinity,
                          ),
                        ),

                        // Dark overlay for depth
                        Container(
                          width: 200,
                          decoration: BoxDecoration(
                            gradient: LinearGradient(
                              begin: Alignment.centerLeft,
                              end: Alignment.centerRight,
                              colors: [
                                Colors.transparent,
                                Colors.black.withOpacity(0.1),
                              ],
                            ),
                          ),
                        ),

                        // Play button overlay
                        Positioned.fill(
                          child: Center(
                            child: Container(
                              padding: EdgeInsets.all(10),
                              decoration: BoxDecoration(
                                color: Colors.black.withOpacity(0.6),
                                shape: BoxShape.circle,
                              ),
                              child: Icon(
                                Icons.play_arrow_rounded,
                                color: Colors.white,
                                size: 32,
                              ),
                            ),
                          ),
                        ),

                        // Status badge
                        Positioned(
                          top: 8,
                          left: 8,
                          child: _buildStatusBadge(data),
                        ),
                      ],
                    ),

                    // Content section
                    Expanded(
                      child: Padding(
                        padding: EdgeInsets.all(16),
                        child: Column(
                          crossAxisAlignment: CrossAxisAlignment.start,
                          mainAxisAlignment: MainAxisAlignment.center,
                          children: [
                            // Title
                            Text(
                              parseHtmlString(data.name.validate()),
                              style: TextStyle(
                                color: Colors.white,
                                fontWeight: FontWeight.w600,
                                fontSize: 16,
                                letterSpacing: 0.3,
                                height: 1.3,
                              ),
                              maxLines: 2,
                              overflow: TextOverflow.ellipsis,
                            ),

                            SizedBox(height: 8),

                            // Additional info row (you can customize this)
                            Row(
                              children: [
                                Icon(
                                  Icons.visibility_outlined,
                                  size: 14,
                                  color: Colors.white.withOpacity(0.6),
                                ),
                                SizedBox(width: 4),
                                Text(
                                  "Watch now",
                                  style: TextStyle(
                                    color: Colors.white.withOpacity(0.6),
                                    fontSize: 12,
                                    fontWeight: FontWeight.w400,
                                  ),
                                ),
                                Spacer(),
                                Icon(
                                  Icons.arrow_forward_ios_rounded,
                                  size: 14,
                                  color: Colors.white.withOpacity(0.4),
                                ),
                              ],
                            ),
                          ],
                        ),
                      ),
                    ),
                  ],
                ),
              ),
            ),
          );
        },
      );
    }
  }
}

// Helper method to build modern status badge
Widget _buildStatusBadge(SectionData data) {
  String label;
  Color bgColor;
  IconData? icon;

  if (data.isFreeVideo()) {
    label = "FREE";
    bgColor = Color(0xFF10B981); // Modern green
    icon = Icons.check_circle;
  } else if (data.isPremium.validate() == 1) {
    label = "PREMIUM";
    bgColor = Color(0xFF6366F1); // Modern indigo
    icon = Icons.workspace_premium;
  } else {
    label = "SUB";
    bgColor = Color(0xFFF59E0B); // Modern amber
    icon = Icons.star;
  }

  return Container(
    padding: EdgeInsets.symmetric(horizontal: 8, vertical: 4),
    decoration: BoxDecoration(
      color: bgColor,
      borderRadius: BorderRadius.circular(6),
      boxShadow: [
        BoxShadow(
          color: bgColor.withOpacity(0.4),
          blurRadius: 8,
          offset: Offset(0, 2),
        ),
      ],
    ),
    child: Row(
      mainAxisSize: MainAxisSize.min,
      children: [
        Icon(icon, size: 11, color: Colors.white),
        SizedBox(width: 3),
        Text(
          label,
          style: TextStyle(
            fontSize: 9,
            color: Colors.white,
            fontWeight: FontWeight.bold,
            letterSpacing: 0.5,a
          ),
        ),
      ],
    ),
  );
}
